{
  "$schema": "https://raw.githubusercontent.com/nicegui/nicegui/main/.schemas/tauri.v2.schema.json",
  "productName": "SoulOS",
  "identifier": "com.projectsoul.soulosnew",
  "version": "0.3.0",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": "v1Compatible",
    "icon": ["icons/icon.icns", "icons/icon.png"],
    "macOS": {
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      },
      "minimumSystemVersion": "10.15"
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "SoulOS",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY2QzY3MTc3ODE3MEZFQUUKUldTdS9uQ0JkM0hHOW9FK2EzOEVuOEFpWFh0a1lwNk10MG1MUlhscmQwQkdqSWhvVEN6aEFnVk4K",
      "endpoints": [
        "https://github.com/hbcaspa/projectSoul/releases/latest/download/latest.json"
      ]
    }
  }
}
